  .Container {
    display: flex;
    justify-content: center;
    flex-direction: column;
    flex-wrap: nowrap;
    align-items: center;
  }

  .Title {
    font-size: xx-large;
    color: white;
  }

  .Content_SocialNetworks {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    padding: 5px;
    width: 100%;
  }

  .Card {
  }

  .Enlace {
  }

  .Icon {
    width: 150px;
    height: 150px;
  }

  .Name {
    padding: 5px;
    font-size: xx-large;
    color: gold;
    text-align: center;
  }

  svg {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  ul {
  }

  li {
  }

  a {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
</style>

