---
import IconsInstagram from "../icons/IconsInstagram.astro";
import IconsFacebook from "../icons/IconsFacebook.astro";
import IconsWhatsapp from "../icons/IconsWhatsapp.astro";
import IconsEmail from "../icons/IconsEmail.astro";
import dataBusiness from "../data/dataBusiness.json";
const { redesSociales } = dataBusiness;

const SocialIcons = {
  Facebook: IconsFacebook,
  WhatsApp: IconsWhatsapp,
  Instagram: IconsInstagram,
};
---

<section>
  <div class="Container">
    <div class="Title">
      <h1>Redes Sociales</h1>
    </div>
    <div class="Content_SocialNetworks">
        {redesSociales.map(({ nombre, urls }) => (
          <div class="Card">
            <a class="Enlace"
              href={urls}
              title={`Visitar ${nombre}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <div class="Icon">
                {SocialIcons[nombre] && <SocialIcons[nombre] />}
              </div>
            </a>
            <div class="Name">{nombre}</div>
          </div>
        ))}
    </div>
  </div>
</section>

