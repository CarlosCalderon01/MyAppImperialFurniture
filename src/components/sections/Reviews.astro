---
import IconsStart from "../icons/IconsStar.astro";
import IconsStarFilled from "../icons/IconsStarFilled.astro";
import dataBusiness from "../data/dataBusiness.json";
const { comentarios } = dataBusiness;
---

<section>
  <div class="Container">
    <div class="Content_Reviews">
      <div class="Title">
        <h1>Comentarios</h1>
      </div>
      <div class="CommentsAll">
        {
          comentarios.map(({ comentario, puntuacion }) => (
            <div class="CommentsOne">
              <div class="Texto">
                <p>{comentario}</p>
              </div>
              <div class="Score">
                {[1, 2, 3, 4, 5].map((star, index) => (
                  <Fragment key={index}>
                    {index < puntuacion ? (
                      <div class="StarAll">
                        <IconsStarFilled />
                      </div>
                    ) : (
                      <div class="StarAll">
                        <IconsStart />
                      </div>
                    )}
                  </Fragment>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<script></script>

<style>
  .Container {
  }

  .Content_Reviews {
    display: flex;
    align-items: center;
    flex-direction: column;
    width: 100%;
    height: max-content;
  }

  .Title {
    width: max-content;
    font-size: xx-large;
    color: white;
    margin: 5px;
    padding: 5px;
    border: initial;
  }

  .CommentsAll {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    align-content: center;
    justify-content: center;
  }

  .CommentsAll * {
    margin: 5px;
    padding: 5px;
  }

  .CommentsOne {
    width: 500px;
    height: max-content;
    display: flex;
    align-items: center;
    flex-direction: column;
    border: 5px #e5be01 solid;
    border-radius: 20px;
  }

  .Texto {
    color: white;
    font-size: x-large;
  }

  .Score {
    width: max-content;
    display: flex;
    flex-direction: row;
  }

  .StarAll {
    width: 50px;
    height: 50px;
  }
</style>

