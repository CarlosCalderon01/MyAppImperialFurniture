---
import dataBusiness from "../data/dataBusiness.json";
const { Galeria } = dataBusiness;
---

<section>
  <div class="Container">
    <div class="Content_ListProducts">
      <div class="Title">
        <h1>Linea De Productos</h1>
      </div>
      <div class="ProductsAll">
        {
          Galeria.map(({ url }) => (
            <div class="Product">
              <img src={url} alt="muebles, imagenes" />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<script></script>

<style>
  .Container {
  }

  .Content_ListProducts {
    /*display: flex; /**/
    display: flex;
    align-items: center;
    flex-direction: column;
  }

  .Title {
    font-size: xx-large;
    color: white;
    text-align: center;
    width: max-content;
  }

  h1 {
  }
  .ProductsAll {
    display: flex;
    align-content: center;
    flex-wrap: wrap;
    height: 100%;
    width: 100%;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
  }

  .Product {
    margin: 5px;
    width: 300px;
    height: 300px;
    border: 5px #e5be01 solid;
    border-radius: 25px;
  }

  .img {
  }

  img {
    width: 100%;
    height: 100%;
    border-radius: 20px;
  }
</style>

